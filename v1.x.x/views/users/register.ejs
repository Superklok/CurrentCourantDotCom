<% layout('layouts/boilerplate') %>
<div class="container justify-content-center align-items-center mt-5">
	<div class="row">
		<div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
			<div class="card mb-3 shadow">
				<div class="card-body">
					<h5 class="card-title text-center mdText contentFont mb-3">Author Registration</h5>
					<form action="/register" method="POST" class="validateForm" novalidate>
						<div class="mb-3">
							<label class="form-label smText contentFont" for="username">Username</label>
							<input class="form-control" type="text" id="username" name="username" placeholder="Username" autofocus required>
							<div class="valid-feedback">
								Sounds good!
							</div>
						</div>
						<div class="mb-3">
							<label class="form-label smText contentFont" for="email">Email</label>
							<input class="form-control" type="email" id="email" name="email" placeholder="Email Address" required>
							<div class="valid-feedback">
								Perfect!
							</div>
						</div>
						<div class="mb-3">
							<label class="form-label smText contentFont" for="password">Password</label>
							<input class="form-control" type="password" id="password" name="password" placeholder="Password" required>
							<div class="valid-feedback">
								Excellent!
							</div>
						</div>
						<div class="mb-3">
							<label class="form-label smText contentFont" for="authorCode">Author Code</label>
							<input class="form-control" type="text" id="authorCode" name="authorCode" placeholder="Author Code" required>
							<div class="valid-feedback">
								Thank you for evaluating The Current Courant!
							</div>
						</div>
						<button class="ccBtn mdBtn w-100">Register</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>