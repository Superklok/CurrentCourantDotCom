<body class="d-flex text-center vh-100 text-white bg-dark">
	<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
		<header class="mb-auto navText">
			<div class="d-none d-lg-block">
				<h3 class="navbar-brand brandFont float-start mb-0"><span class="hpBtn">CurrentCourant.com</span></h3>
				<nav class="nav nav-masthead justify-content-center float-end">
					<% if(!currentUser) { %>
					<a class="ccBtn me-4 mt-2" href="/login"><span class="hpBtn">Login</span></a>
					<a class="ccBtn me-4 mt-2" href="/register"><span class="hpBtn">Register</span></a>
					<% } else { %>
					<a class="ccBtn me-4 mt-2" href="/logout"><span class="hpBtn">Logout</span></a>
					<% } %>
				</nav>
			</div>
		</header>
		<main class="px-3">
			<h1 class="lgText brandFont mb-3"><span class="hpBtn">The Current Courant</span></h1>
			<p class="lead smText contentFont"><span class="hpBtn">Welcome to The Current Courant!<br>Content of this website-including articles based<br>on real people or actual businesses-is entirely fictional.</span></p>
			<a href="/articles" class="ccBtn enterBtn"><span class="hpBtn">Enter</span></a>
		</main>
		<footer class="mt-auto">
			<span class="me-3">&copy; <span class="xsText contentFont">2021 Superklok Labs</span></span>
			<div class="btn-group dropup">
				<button type="button" class="dropdown-toggle ccBtn" data-bs-toggle="dropdown" aria-expanded="false">
					<span id="tmLogo"><span class="hpBtn">TM</span></span>
				</button>
				<ul class="dropdown-menu shadow">
					<li id="tmDotLink" class="my-0 py-0">
						<a class="ccBtn mx-4" href="https://www.trevmorin.com/"><span class="tmLgText">T</span><span class="tmSmText">rev</span><span class="tmLgText">M</span><span class="tmSmText">orin</span><span class="tmComText">.com</span></a>
					</li>
					<li class="mt-0 mb-1 pt-0 pb-1">
						<a class="ccBtn mx-4" href="https://www.superklok.com/"><span id="slText">Superklok.com</span></a>
					</li>
					<li class="mb-2 pb-1">
						<a class="ccBtn mx-4" href="https://www.jetwheelreel.com/"><span id="jwrText">JetWheelReel.com</span></a>
					</li>
					<li class="mt-0 mb-1 pt-0 pb-1">
						<a class="ccBtn mx-4" href="https://www.swingcars.com/"><span id="scText">Swingcars.com</span></a>
					</li>
					<li class="mt-0 mb-3">
						<a class="ccBtn mx-4" href="https://www.sliderpiler.com/"><span id="spText">SliderPiler.com</span></a>
					</li>
				</ul>
			</div>
			<div class="btn-group dropup ms-2">
				<button type="button" class="dropdown-toggle smText ccBtn" data-bs-toggle="dropdown" aria-expanded="false">
					<span class="hpBtn">English</span>
				</button>
				<ul class="dropdown-menu shadow">
					<li class="mx-4 my-3 px-3">
						<a class="smText ccBtn" href="https://www.currentcourant.ca/">Fran&#231;ais</a>
					</li>
				</ul>
			</div>
		</footer>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
