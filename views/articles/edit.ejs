<% layout('layouts/boilerplate') %>
<div class="row">
	<h1 class="text-center">Edit Article</h1>
	<div class="col-6 offset-3">
		<form action="/articles/<%=article._id%>?_method=PUT" method="POST">
			<div class="mb-3">
				<label class="form-label" for="title">Title</label>
				<input class="form-control" type="text" id="title" name="article[title]" value="<%=article.title%>">
			</div>
			<div class="mb-3">
				<label class="form-label" for="image">Image URL</label>
				<input class="form-control" type="text" id="image" name="article[image]" value="<%=article.image%>">
			</div>
			<div class="mb-3">
				<label class="form-label" for="content">Content</label>
				<textarea class="form-control" type="text" id="content" name="article[content]"><%= article.content %></textarea>
			</div>
			<div class="mb-3">
				<button class="btn btn-dark">Update Article</button>
			</div>
		</form>
		<div>
			<a class="btn btn-dark" href="/articles/<%= article._id %>">Back To Article</a>
		</div>
	</div>
</div>